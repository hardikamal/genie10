<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.supergenieapp.android.CustomViews.ProgressBar.LoadingView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/parentLoadingView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        app:lv_color="@color/colorPrimary"
        app:lv_loading="false"
        app:lv_title="@string/paymentpageload">
        <com.davemorrissey.labs.subscaleview.SubsamplingScaleImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </com.supergenieapp.android.CustomViews.ProgressBar.LoadingView>
</LinearLayout>