<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/_2sdp"
    android:paddingEnd="@dimen/_100sdp"
    android:paddingLeft="@dimen/_10sdp"
    android:paddingRight="@dimen/_100sdp"
    android:paddingStart="@dimen/_10sdp"
    android:paddingTop="@dimen/_2sdp">

    <LinearLayout
        android:id="@+id/paylayout"
        android:background="#ccc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="@dimen/_1sdp"
            android:background="@color/white"
            android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/companyname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:textColor="@color/color444"
                        android:gravity="center"
                        android:singleLine="true"
                        android:textIsSelectable="true"
                        android:textSize="@dimen/_18sdp" />

                    <com.supergenieapp.android.CustomViews.TextView.AutoResizeTextView
                        android:id="@+id/rate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:gravity="center"
                        android:singleLine="true"
                        android:textColor="@color/color444"
                        android:textIsSelectable="false"
                        android:textSize="@dimen/_30sdp" />

                    <TextView
                        android:id="@+id/orderdetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:gravity="center"
                        android:maxLines="4"
                        android:textIsSelectable="true"
                        android:textSize="@dimen/_12sdp" />

                    <LinearLayout
                        android:id="@+id/backgroundButtons"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="vertical">

                        <com.supergenieapp.android.CustomViews.Button.ButtonFlat
                            android:id="@+id/payascod"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_10sdp"
                            android:text="@string/paycod"
                            android:textIsSelectable="false" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.supergenieapp.android.CustomViews.Button.ButtonFlat
                                android:id="@+id/paytm"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:padding="@dimen/_10sdp"
                                android:text="@string/paytmwallet"
                                android:textIsSelectable="false" />

                            <View
                                android:layout_width="@dimen/_2sdp"
                                android:layout_height="match_parent"
                                android:background="@color/white" />

                            <com.supergenieapp.android.CustomViews.Button.ButtonFlat
                                android:id="@+id/paynow"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:padding="@dimen/_10sdp"
                                android:text="@string/paynow"
                                android:textIsSelectable="false" />
                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="start"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/white"
                android:textIsSelectable="false"
                android:textSize="@dimen/_14sdp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/text"
                android:layout_alignEnd="@+id/text"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignRight="@+id/text"
                android:layout_gravity="end"
                android:orientation="horizontal"
                android:padding="@dimen/_5sdp">

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_8sdp" />

                <ImageView
                    android:id="@+id/tick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>