    <style name="MyMaterialThemeWithToolBar" parent="MyMaterialThemeWithToolBar.Base"></style>

    <style name="MyMaterialThemeWithToolBar.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/colorPrimary</item>
