    <style name="Custom.DroppyPopup" parent="Droppy.DroppyPopup">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Custom.DroppyMenu" parent="Droppy.DroppyMenu">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Custom.DroppyMenuItem" parent="Droppy.DroppyMenuItem">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Custom.DroppyMenuItemTitle" parent="Droppy.DroppyMenuItemTitle">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_width">wrap_content</item>
